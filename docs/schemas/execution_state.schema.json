{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "execution_state.schema.json",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "orders_last_60s_global": { "type": "integer", "minimum": 0 },
    "orders_last_60s_by_strategy": { "type": "object", "additionalProperties": { "type": "integer" } },
    "violations_last_window": {
      "type": "array",
      "items": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 2,
        "maxItems": 2
      }
    },
    "kill_switch_active": { "type": "boolean" }
  }
}
